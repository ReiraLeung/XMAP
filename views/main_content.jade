extends new_index

block main_content
  - var list_found = list;
  - var i=-1;
  - var levels = ['A','B','C','D','E'];
  h1.page-header
    | Page Heading
    small Secondary Text
  .container(style='width: 100%;')
    .row-fluid
      - each item in list_found
        - i = i+1;
        .col-xs-3
          a(href='/application?app=' + item["package_name"])
            img.img-responsive.img-rounded(src = item['image'],href='/application?app='+item["package_name"],style='width:75%; height:75%;')
          a(href='/application?app=' + item["package_name"])
            h5 #{item["name"]}
          - var level = item["riskEva"]["SafeClass"];
          - var floatX = Math.round(item["riskEva"]["Score"] * 100) / 100;
          - var result = levels[level-1]+" ( "+floatX+" )";
          - var colorstring = "000";

          - if(level==1){
          -    colorstring = "32cd32"
          - }
          - if(level==2){
          -    colorstring = "C0FF3E"
          - }
          - if(level==3){
          -    colorstring = "CDAD00"
          - }
          - if(level==4){
          -    colorstring = "EE9A00"
          - }
          - if(level==5){
          -    colorstring = "f00"
          - }
          - var colorstyle = "color: #"+colorstring+";";
          - console.log(colorstyle);
          //a(href='/application?app='+item["package_name"])
          p(style= colorstyle) RiskEva: &nbsp
            | strong #{result}
          p &nbsp&nbsp&nbsp&nbsp




