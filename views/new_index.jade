extends new_navbar

block page_content
  // Page Content
  .container
    .row
      // Blog Entries Column
      .col-md-9
        block main_content
      // Blog Sidebar Widgets Column
      .col-md-3
        // Blog Search Well
        .well
          h4 APP Search
          .input-group
            input#appname.form-control(type='text')
            span.input-group-btn
              button#searchapp.btn.btn-default(type='button',onclick="searchapk()", value='search')
                span.glyphicon.glyphicon-search
          script(type='text/javascript').
            function searchapk() {
              window.location.href="/search?appname=" + $('#appname').val();
            }
